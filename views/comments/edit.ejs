<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="page-header">
            <h2>Edit Comment</h2>
        </div>
        
        <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div  class="form-group">
                <textarea class="form-control" type="text" name="comment[text]" rows="5"><%=comment.text%></textarea>
            </div>

            <div  class="form-group">
                <button class="btn btn-sm btn-default">Submit</button>
            </div>
        </form>
        
        <span class="pull-right">
        <a href="/campgrounds" class="btn btn-sm btn-info">Go Back</a>
        </span>
        
    </div>
</div>    

<% include ../partials/footer %>