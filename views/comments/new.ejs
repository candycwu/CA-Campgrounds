<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="page-header">
            <h2>Add a new comment to "<%= campground.name%>"</h2>
        </div>
        
        <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
            <div  class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text" rows="5">
            </div>

            <div  class="form-group">
                <button class="btn btn-sm btn-default">Submit</button>
            </div>
        </form>
        <span class="pull-right">
            <a href="/campgrounds" class="btn btn-sm btn-info">Go Back</a>
        </span>
    </div>
</div>    

<% include ../partials/footer %>